@using Entities
@model Urun

@{
    ViewBag.Title = "UrunKayit";
}

<br />

<h2>UrunKayit</h2>

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

@using (Html.BeginForm())
    {

    <div class="col-md-6">
        <h5>Değiştirilebilecek yeni bilgileri girin</h5>
        <p style="font-size:small">Ürün Adı</p> @Html.TextBoxFor(model => model.Urun_Adi, new { @class = "form-control" }) <br />
        <p style="font-size:small">Ürün Miktarı</p>@Html.TextBoxFor(model => model.Miktar, new { @class = "form-control" }) <br />
        <p style="font-size:small">Ürün Fiyatı</p>@Html.TextBoxFor(model => model.Fiyat, new { @class = "form-control" }) <br />

        <p style="font-size:small">Kategorisi</p> @Html.DropDownListFor(model => model.Kategori.Baslik, new SelectList(ViewBag.kategoriler)) <br />
        <p style="font-size:small">Ürün Müşteri Adı</p> @Html.DropDownListFor(model => model.Musteri.Ad_Soyad, new SelectList(ViewBag.musteriler)) <br /> <br /> <br />

        <button href="/Home/UrunKayit" type="submit" class="btn btn-danger btn-lg btn-block login-button">UrunKayit</button>

    </div>
}


