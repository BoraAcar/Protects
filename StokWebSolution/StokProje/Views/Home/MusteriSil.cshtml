
@{
    ViewBag.Title = "MusteriSil";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<h2>MusteriSil</h2>

@using (Html.BeginForm())
{

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                @Html.DropDownList("Ad_Soyad", new SelectList(ViewBag.musteriler))
                <br />

                <button href="/Home/MusteriSil" type="submit" class="btn btn-danger btn-block login-button">Müşteri Sil</button>
                <p class="alert-danger"> Silinen müşterilerin stok ürünleri de silinecektir!</p>

            </div>
        </div>
    </div>
}



